<?xml version="1.0"?>
<phpunit
    bootstrap="bootstrap.php"
    colors="true"
>
    <filter>
        <whitelist>
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>

    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="true"/>
    </logging>
    
    <testsuites>
        <testsuite>
            <directory suffix="Test.php">test</directory>
        </testsuite>
    </testsuites>
</phpunit>
